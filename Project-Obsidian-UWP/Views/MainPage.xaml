<Page
    x:Class="Project_Obsidian_UWP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_Obsidian_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <NavigationView x:Name="MainNaviView" PaneDisplayMode="Top"
                        ItemInvoked="MainNaviView_ItemInvoked"
                        IsBackButtonVisible="Collapsed">
                <NavigationView.MenuItems>
                    <NavigationViewItem Content="Workspace" Tag="Workspace"/>
                    <!--<NavigationViewItem Content="Menu Item2" Tag="SamplePage2" />
                <NavigationViewItem Content="Menu Item3" Tag="SamplePage3" />
                <NavigationViewItem Content="Menu Item4" Tag="SamplePage4" />-->
                </NavigationView.MenuItems>
            </NavigationView>

            <Frame x:Name="MainFrame" IsNavigationStackEnabled="False"/>
        </StackPanel>
    </Grid>
</Page>
